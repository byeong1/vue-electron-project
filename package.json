{
    "name": "vue-project",
    "version": "1.0.0",
    "main": "dist-electron/main.js",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently \"yarn dev\" \"tsc -p electron/tsconfig.json && electron .\"",
        "electron:build": "yarn build && tsc -p electron/tsconfig.json && electron-builder",
        "build-only": "vite build",
        "type-check": "vue-tsc --build",
        "format": "prettier --write src/"
    },
    "dependencies": {
        "axios": "^1.9.0",
        "vue": "^3.5.13",
        "vue-router": "^4.5.0"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.1",
        "@types/node": "^22.14.0",
        "@vitejs/plugin-vue": "^5.2.3",
        "@vue/tsconfig": "^0.7.0",
        "concurrently": "^9.1.2",
        "electron": "^35.2.1",
        "electron-builder": "^26.0.12",
        "electron-is-dev": "^3.0.1",
        "npm-run-all2": "^7.0.2",
        "prettier": "3.5.3",
        "typescript": "~5.8.0",
        "vite": "^6.2.4",
        "vite-plugin-vue-devtools": "^7.7.2",
        "vue-tsc": "^2.2.8"
    },
    "build": {
        "appId": "com.vue-project.app",
        "productName": "Vue Project",
        "directories": {
            "output": "dist_electron"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
