{
    "name": "vue-electron-project",
    "version": "1.0.0",
    "main": "dist/electron/main.js",
    "type": "commonjs",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:dev": "cross-env NODE_ENV=dev concurrently \"yarn dev\" \"tsc -p electron/tsconfig.json && electron .\"",
        "electron:build:mac": "yarn build && tsc -p electron/tsconfig.json && electron-builder -m",
        "electron:build:win": "yarn build && tsc -p electron/tsconfig.json && electron-builder -w",
        "electron:build:linux": "yarn build && tsc -p electron/tsconfig.json && electron-builder -l",
        "build-only": "vite build",
        "type-check": "vue-tsc --build",
        "format": "prettier --write src/",
        "publish": "dotenv --override -- electron-builder -m --publish always"
    },
    "dependencies": {
        "axios": "^1.9.0",
        "cross-env": "^7.0.3",
        "vue": "^3.5.13",
        "vue-router": "^4.5.0"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.1",
        "@types/node": "^22.14.0",
        "@vitejs/plugin-vue": "^5.2.3",
        "@vue/tsconfig": "^0.7.0",
        "concurrently": "^9.1.2",
        "dotenv-cli": "^8.0.0",
        "electron": "^35.2.1",
        "electron-builder": "^26.0.12",
        "npm-run-all2": "^7.0.2",
        "prettier": "3.5.3",
        "typescript": "~5.8.0",
        "vite": "^6.2.4",
        "vite-plugin-vue-devtools": "^7.7.2",
        "vue-tsc": "^2.2.8"
    },
    "build": {
        "appId": "com.vue-electron-project.app",
        "productName": "vue-electron-project",
        "directories": {
            "output": "out"
        },
        "files": [
            "dist/**/*"
        ],
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "target": "AppImage"
        },
        "publish": {
            "provider": "github",
            "owner": "byeong1",
            "repo": "vue-tutorial",
            "releaseType": "release"
        }
    }
}
