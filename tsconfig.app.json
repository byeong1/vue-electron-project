{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@constants/*": ["src/constants/*"],
            "@types/*": ["src/types/*"],
            "@api/*": ["src/api/*"],
            "@utils/*": ["src/utils/*"],
            "@assets/*": ["src/assets/*"],
            "@pages/*": ["src/pages/*"]
        }
    }
}
